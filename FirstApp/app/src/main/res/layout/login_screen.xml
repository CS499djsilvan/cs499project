<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/nightsky">

    <RelativeLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!--
        <ImageView
            android:id="@+id/skyIcon"
            android:src="@null"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        -->

        <TextView
            android:id="@+id/iconText"
            android:textSize="80dp"
            android:text="@string/app_name"
            android:textColor="@color/logoColor"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <EditText
        android:hint="Username"
        android:background="@drawable/textstyle1"
        android:textColorHint="@color/logoColor"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_weight="1.5"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <EditText
        android:hint="Password"
        android:background="@drawable/textstyle1"
        android:textColorHint="@color/logoColor"
        android:textColor="@color/white"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_weight="1.5"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/loginButton"
        android:hint="Login"
        android:background="@drawable/cloud2small"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:text="Forgot your login details? Click here."
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/logoColor"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:background="@drawable/cloud1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/registerButton"
            android:text="Don't have an account? Sign up here!"
            android:background="@drawable/cloud1"
            android:layout_weight="1"
            android:textColor="@color/logoColor"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>